// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Fonts
font-sans = "Helvetica Neue", Helvetica, Arial, sans-serif
font-serif = Garamond, Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Monaco, Menlo, Consolas, monospace
font-title = Lato, font-sans
font-size = 15px
line-height = 1.6em

// Colors
color-primary = #007bff
color-primary-d = #0069d9
color-secondary = #6c757d
color-secondary-d = #5a6268
color-success = #28a745
color-success-d = #218838
color-danger = #dc3545
color-danger-d = #c82333
color-warning = #ffc107
color-warning-d = #e0a800
color-info = #17a2b8
color-info-d = #128496
color-light = #f8f9fa
color-light-d = #e2e6ea
color-dark = #343a40
color-dark-d = #23272b
color-muted = #6c757d
color-white = #fff
color-black = #000

// Layout
max-width = 1200px
gutter-width = 20px
sidebar-width = 220px
mobile-nav-width = 260px

// Media queries
mq-mobile = "screen and (max-width: 768px)"
mq-normal = "screen and (min-width: 769px)"
mq-tablet = "screen and (min-width: 480px)"
